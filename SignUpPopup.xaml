<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Manufacturing_Society_App.SignUpPopup"
               Color="White">
    <Grid Padding="20">
        <Frame BackgroundColor="White"
               CornerRadius="30"
               Margin="100">

            <VerticalStackLayout Padding="20" BackgroundColor="White" WidthRequest="300" HeightRequest="400">
                <Frame BackgroundColor="White"></Frame>

                <Label Text="Sign Up" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,100,10,0" />

                <Entry x:Name="SignUpEmail" Placeholder="Enter email address" Margin="0,10,0,20" />
                <Entry x:Name="SignUpPassword" Placeholder="Enter password" IsPassword="True" Margin="0,0,0,20" />
                <Entry x:Name="SignUpConfirmPassword" Placeholder="Confirm password" IsPassword="True" Margin="0,0,0,20" />

                <Button Text="Sign Up" Clicked="OnSignUpButtonClicked" BackgroundColor="#ed3351" TextColor="White" />

            </VerticalStackLayout>
        </Frame>
    </Grid>
</toolkit:Popup>
